@model ShabbatBrunch.Models.Reservation


@{
    ViewData["Title"] = "Réservation de Brunch";
}

<div class="flex flex-col md:flex-row justify-center items-center">

    <div class=" flex w-auto m-4 md:w-[35%] justify-center items-center">
        <img src="~/img/MegaSale brunch.PNG" class=" w-[300px] h-[550px]" alt="..." />
    </div>
    <!-- Author: FormBold Team -->
    <div class="flex flex-col w-[300px] m-4 md:w- mx-auto md:w-[35%] bg-beige-200 p-6 rounded-lg shadow-md">

        @if (TempData["SuccessReservationMessage"] != null)
        {
            <h2 class="text-white bg-green-600 flex justify-center items-center mb-6">@TempData["SuccessReservationMessage"]
            </h2>
        }

        <form id="reservationForm" asp-controller="Reservation" asp-action="Create">
            <div class="-mx-3 flex flex-wrap">
                <div class="px-3 w-full md:w-1/2">
                    <div class="mb-5">
                        <label asp-for="Nom" class="mb-3 block text-base font-medium text-[#07074D]">
                            Quel est votre Nom ?
                        </label>
                        <input asp-for="Nom" placeholder="Nom"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <span asp-validation-for="Nom" class="text-red-600"></span>
                    </div>
                </div>
                <div class="px-3 w-full md:w-1/2">
                    <div class="mb-5">
                        <label asp-for="Prenom" class="mb-3 block text-base font-medium text-[#07074D]">
                            Quel est votre Prénom ?
                        </label>
                        <input asp-for="Prenom" placeholder="Prénom"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <span asp-validation-for="Prenom" class="text-red-600"></span>
                    </div>
                </div>
                <div class="w-full px-3">
                    <div class="mb-5">
                        <label asp-for="Telephone" class="mb-3 block text-base font-medium text-[#07074D]">
                            Quel est votre numéro de téléphone ?
                        </label>
                        <input asp-for="Telephone" type="text" placeholder="Numéro de télephone"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <span asp-validation-for="Telephone" class="text-red-600"></span>
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <label asp-for="NbCouvert" class="mb-3 block text-base font-medium text-[#07074D]">
                    Combien de couvert ?
                </label>
                <input asp-for="NbCouvert" placeholder="2" min="0"
                    class="w-full appearance-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                <span asp-validation-for="NbCouvert" class="text-red-600"></span>
            </div>

            <div class="-mx-3 flex flex-wrap">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label asp-for="Date" class="mb-3 block text-base font-medium text-[#07074D]">
                            Date
                        </label>
                        <input asp-for="Date" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <span asp-validation-for="Date" class="text-red-600"></span>
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label asp-for="Heure" class="mb-3 block text-base font-medium text-[#07074D]">
                            Heure
                        </label>
                        <input asp-for="Heure" type="time"
                            class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" />
                        <span asp-validation-for="Heure" class="text-red-600"></span>
                    </div>
                </div>
            </div>

            <div class="w-full">
                <div class="mb-5">
                    <label asp-for="Commentaire" class="mb-3 block text-base font-medium text-[#07074D]">
                        Commentaire
                    </label>
                    <textarea asp-for="Commentaire"
                        class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md"></textarea>
                    <span asp-validation-for="Commentaire" class="text-red-600"></span>
                </div>
            </div>

            <div>
                <button
                    class="hover:shadow-form rounded-md bg-[#6A64F1] py-3 px-8 text-center text-base font-semibold text-white outline-none">
                    Envoyer
                </button>
            </div>
        </form>
    </div>


    <div class=" flex w-auto m-4 md:w-[35%] justify-center items-center">
        <img src="~/img/StartDay brunch.PNG" class=" w-[300px] h-[550px]" alt="..." />
    </div>


</div>
