@model IEnumerable<ShabbatBrunch.Models.NewsletterModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container mx-auto text-center w-screen min-h-screen h-auto flex flex-col items-center justify-start gap-4">
    <h1 class="text-4xl font-bold mb-2 title">Newsletter</h1>

    <p>
        <a asp-action="Create" class="text-marron-500 hover:underline">Créer un nouveau mail </a>
    </p>

    <div class="flex justify-center mx-auto">
        <table class="table w-full mt-2 border border-gray-100 rounded-lg p-2">
            <thead class="bg-white/60">
            <tr>
                <th class="py-2 px-4 border-b">
                    @Html.DisplayNameFor(model => model.Mail)
                </th>
                <th class="py-2 px-4 border-b"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="py-2 px-4 border-b">
                        @Html.DisplayFor(modelItem => item.Mail)
                    </td>
                    <td class="py-2 px-4 border-b">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-green-500 hover:underline">Éditer</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-500 hover:underline">Détails</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:underline">Supprimer</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>