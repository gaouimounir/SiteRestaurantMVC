@model ShabbatBrunch.Models.NewsletterModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="min-h-screen h-auto flex flex-col justify-center gap-4">
    <h1 class="text-2xl font-bold mb-4 text-center">Créer un nouveau mail</h1>

    <div class="mx-auto w-auto">
        <div class="bg-white p-6 md:p-8 lg:p-10 rounded-lg shadow-md">

            <form asp-action="Create" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-4">
                    <label asp-for="Mail" class="block text-sm font-medium text-gray-600">E-mail:</label>
                    <input asp-for="Mail" class="mt-1 p-2 w-full md:w-96 border rounded-md" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <button type="submit" class="bg-marron-500 text-white p-2 rounded-md hover:bg-marron-700 w-full">Créer</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="text-marron-500 hover:underline">Retour aux mails</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
