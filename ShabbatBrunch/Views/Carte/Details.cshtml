@model ShabbatBrunch.Models.CarteItem
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Nom</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<div class="container mx-auto my-8">
    <div class="max-w-2xl mx-auto bg-white p-8 shadow-md rounded-md">
        <img src="~/img/carte/@Model.Image" alt="@Model.Nom" class="w-full h-64 object-cover mb-6 rounded-md">

        <h1 class="text-3xl font-bold mb-4">@Model.Nom</h1>

        <p class="text-gray-700 mb-4">@Model.Description</p>

        <p class="text-lg font-bold text-marron-500 mb-2">@Model.Prix<span class="euro-sign">€</span></p>

        <p class="text-sm text-gray-500 mb-4">@Model.Categorie.ToString()</p>
        
        <p class=" text-sm text-gray-500 mb-4"> Allergenes</p>

        <a asp-action="Index" class="text-marron-500 hover:underline">Retour à la liste</a>
    </div>
</div>

</body>
</html>